{
  "$schema": "../gen/schemas/desktop-capability.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:default",
    "dialog:allow-save",
    "fs:allow-write-file",
    {
      "identifier": "fs:scope",
      "allow": ["$HOME/**/*"]
    }
  ]
}
